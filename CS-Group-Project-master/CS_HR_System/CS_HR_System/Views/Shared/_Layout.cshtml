<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HR Master - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="h-100">
    @if (Request.IsAuthenticated && User.IsInRole("Employee"))
    {
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></button>
                <a class="navbar-brand" href="/">HR Master</a>
                <div class="navbar-collapse collapse" id="navbarSupportedContent">
                    <ul class="nav navbar-nav mr-auto">
                        <li class="nav-item"><a href="/Home/Index" class="nav-link">Account</a></li>
                        <li class="nav-item"><a href="/Shifts/PersonalIndex" class="nav-link">Shifts</a></li>
                        <li class="nav-item"><a href="/PayRolls/PersonalIndex" class="nav-link">Payroll</a></li>
                        <li class="nav-item"><a href="/PayHistories/PersonalIndex" class="nav-link">Pay History</a></li>
                        <li class="nav-item"><a href="/RequestTimeOffs/PersonalIndex" class="nav-link">Time Off Requests</a></li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right mr-auto">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
        </nav>
    }
    else if (Request.IsAuthenticated && User.IsInRole("Manager"))
    {
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></button>
            <a class="navbar-brand" href="/">HR Master</a>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item"><a href="/Home/Index" class="nav-link">Account</a></li>
                    <li class="nav-item"><a href="/Shifts/PersonalIndex" class="nav-link">Shifts</a></li>
                    <li class="nav-item"><a href="/PayRolls/PersonalIndex" class="nav-link">Payroll</a></li>
                    <li class="nav-item"><a href="/PayHistories/PersonalIndex" class="nav-link">Pay History</a></li>
                    <li class="nav-item"><a href="/RequestTimeOffs/PersonalIndex" class="nav-link">Time Off Requests</a></li>
                    <li class="nav-item"><a href="/Users/Index" class="nav-link">Employees</a></li>
                    <li class="nav-item"><a href="/PayRolls/Index" class="nav-link">Pay</a></li>
                    <li class="nav-item"><a href="/RequestTimeOffs/Index" class="nav-link">Pending Requests</a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right mr-auto">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>
    }
    else
    {
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></button>
            <a class="navbar-brand" href="/">HR Master</a>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    }

    <main role="main" class="mt-4 mb-5">
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <footer class="footer mt-auto fixed-bottom bg-white">
        <hr />
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Client/Server 4945 Project</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
